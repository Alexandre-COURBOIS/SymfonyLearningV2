{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<form style="margin: 5% 0 0 0" method="post" action="{{ path('security_login') }}">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Adresse email" required name="_username">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Connexion</button>
    </div>
</form>





{% endblock %}